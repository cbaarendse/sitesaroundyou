{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "client/**/*",
        "./src/ts/**/*"
    ],
    "exclude": [
        ".meteor",
        "node_modules"
    ]
}